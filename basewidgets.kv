<ScrollableLabel>:
    Label:
        markup: True
        text: root.text
        size_hint_y: None
        text_size: self.width, None
        height: self.texture_size[1]


<HSeparator>
    size_hint_y: None
    thickness: 2
    margin: 1
    height: self.thickness + 2 * self.margin
    color: 0.25, 0.6, 1.0, 0.5
    canvas:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.x + self.margin, self.y + self.margin
            size: self.width - 2 * self.margin, self.thickness


<VSeparator>
    size_hint_x: None
    thickness: 2
    margin: 1
    width: self.thickness + 2 * self.margin
    color: 0.25, 0.6, 1.0, 0.5
    canvas:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.x + self.margin, self.y + self.margin
            size: self.thickness, self.height - 2 * self.margin
