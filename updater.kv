#:import ScrollableLabel basewidgets.ScrollableLabel


<UpdatePane>:
    id: updater
    orientation: 'vertical'
    ScrollableLabel:
        id: output
        text: ""
    ProgressBar:
        id: progress_current
        value: 0
        max: 100
        size_hint_y: 0.1
    ProgressBar:
        id: progress_files
        value: 0
        size_hint_y: 0.1
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        Button:
            text: "Start Update"
            on_press: updater.do_update()
        Button:
            text: "Cancel"
            on_press: updater.cancel()
