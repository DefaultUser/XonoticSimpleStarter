#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import ListItemLabel kivy.uix.listview.ListItemLabel

#:import ScrollableLabel basewidgets.ScrollableLabel
#:import HSeparator basewidgets.HSeparator
#:import VSeparator basewidgets.VSeparator


<IRCChannelView>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        ScrollableLabel:
            id: txt_topic
        Button:
            id: btn_join_part
            disabled: True
            size_hint_x: 0.3
            text: "Join"
            on_press: app.irccontroller.join_or_part(root.channel)
    HSeparator
    BoxLayout:
        orientation: 'horizontal'
        ScrollableLabel:
            id: txt_display
        VSeparator
        ListView:
            size_hint_x: 0.3
            adapter: ListAdapter(data=[], cls=ListItemLabel)
    TextInput:
        id: txt_input
        size_hint_y: None
        multiline: False
        height: self.minimum_height
        disabled: True
        on_text_validate: root.process_text(self.text)
